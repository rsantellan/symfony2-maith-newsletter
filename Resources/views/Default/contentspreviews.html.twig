<header class="header navbar clearfix bd-b">
  <p class="navbar-text">{% trans %}admin_newsletter_content_list{% endtrans %}</p>
  <div class="btn-group pull-right mg-r-sm">
    <button type="button" class="btn btn-sm btn-white navbar-btn" {% if pager == 0 %} disabled {% else %} onclick="{#return doChangePageInFolder('{{ path('contable_email_folder_data', { 'id' : folderId })}}?pager={{ prevpage }}');"#} {% endif %} >
      <i class="fa fa-chevron-left"></i>
    </button>
    <button type="button" class="btn btn-sm btn-white navbar-btn" {% if contents | length < limitContent %} disabled {% else %} onclick="{#return doChangePageInFolder('{{ path('contable_email_folder_data', { 'id' : folderId })}}?pager={{ prevpage }}');"#} {% endif %} >
      <i class="fa fa-chevron-right"></i>
    </button>
  </div>
</header>

<div class="content-wrap no-padding"  style=''>
  <!-- content wrapper -->
  <ul class="list-group no-radius pd-b-lg" style="margin: 0 -1px;" id="content-list-container">
    {% for content in contents %}
      {% include 'MaithNewsletterBundle:Default:contentpreviewitem.html.twig' with { 'content' : content } %}
    {% endfor %}
  </ul>
</div>
