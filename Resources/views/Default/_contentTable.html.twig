<div class="table-responsive no-border">
        <table class="table table-bordered table-striped mg-t datatable">
            <thead>
              <tr>
                <th>{% trans %}admin_newsletter_content_title{% endtrans %}</th>
                <th>{% trans %}admin_newsletter_content_created{% endtrans %}</th>
                <th>{% trans %}admin_newsletter_content_sended{% endtrans %}</th>
                <th>{% trans %}admin_newsletter_content_actions{% endtrans %}</th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th>{% trans %}admin_newsletter_content_title{% endtrans %}</th>
                <th>{% trans %}admin_newsletter_content_created{% endtrans %}</th>
                <th>{% trans %}admin_newsletter_content_sended{% endtrans %}</th>
                <th>{% trans %}admin_newsletter_content_actions{% endtrans %}</th>
              </tr>
            </tfoot>
            <tbody id="newsletter_body_container">
            {% for content in contents %}
                {% include 'MaithNewsletterBundle:Default:_contentTableRow.html.twig' with { 'content' : content } %}
            {% endfor %}
            </tbody>
        </table>
  </div>
  <div class="btn-group pull-right mg-r-sm">
    <button type="button" class="btn btn-sm btn-white navbar-btn" {% if pager == 0 %} disabled {% else %} onclick="return retrieveTableNewsletter('{{ path('admin_newsletter_pagination_content', { 'page' : pager - 1  }) }}');"{% endif %}>
      <i class="fa fa-chevron-left"></i>
    </button>
    <button type="button" class="btn btn-sm btn-white navbar-btn" {% if contents | length < limitContent %} disabled {% else %} onclick="return retrieveTableNewsletter('{{ path('admin_newsletter_pagination_content', { 'page' : pager + 1  }) }}');"{% endif %} >
      <i class="fa fa-chevron-right"></i>
    </button>
  </div>
